{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - La Boutique Francaise{% endblock %}

{% block content %}
    <h1>{{product.name}}</h1>

    <div class="row productPage">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration}}" alt="{{ product.name}}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="productPagePrice">{{ (product.price / 100) | number_format(2, ',', '.') }} â‚¬</span>
            <hr>
            <p>{{ product.description }}</p>
            <a href="{{ path('add_to_cart', {'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
    <h3 class="text-center">Nos meilleurs ventes</h3>
		<div class="row mb-5">
			{% for product in products %}
				<div class="col-md-3">
					{% include 'product/single_product.html.twig' %}
				</div>
			{% endfor %}
		</div>
{% endblock %}
