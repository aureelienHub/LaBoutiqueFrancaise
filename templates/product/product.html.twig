{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Francaise{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h2>Filtrer</h2>
            {{ form(form)}}
        </div>
        <div class="col-md-9">
            <h2>Nos produits</h2>

    <div class="row productPage">
        {% for product in products %}
            <div class="col-md-4">
                <div class="productItem text-center">
                    <a href="{{ path('product', {'slug' : product.slug}) }}"><img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"></a>
                    <h2>{{product.name}}</h2>
                    <span class="productSubtitle">{{product.subtitle}}</span>
                    <span class="productPrice">{{ (product.price / 100) | number_format(2, ',', '.') }} â‚¬</span>
                </div>
            </div>
        {% endfor %}
    </div>
        </div>
    </div>
    
{% endblock %}
